
@model Chartypaltform.ViewModels.CampaignViewModel

@{
    ViewData["Title"] = "Create Campaign";
    ViewBag.ShowHeroSection = true;

}

<h1>Create Campaign</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>


   
    <div class="form-group">
        <label asp-for="CampaignName" class="control-label"></label>
        <input asp-for="CampaignName" class="form-control" />
        <span asp-validation-for="CampaignName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="formFile" class="control-label">Upload File</label>
        <input asp-for="formFile" class="form-control" />
        <span asp-validation-for="formFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CampaignDes" class="control-label"></label>
        <textarea asp-for="CampaignDes" class="form-control"></textarea>
        <span asp-validation-for="CampaignDes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GoalAmount" class="control-label"></label>
        <input asp-for="GoalAmount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="GoalAmount" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

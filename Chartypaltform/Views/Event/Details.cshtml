@model Chartypaltform.Models.Event

@{
    ViewBag.Title = "Event Details";
    ViewBag.ShowHeroSection = true;
}

<div class="container mt-4">
    <div class="text-center">
        <h2 class="mb-3">@Model.Title</h2>
        <p class="lead text-muted">@Model.Description</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <h5><strong>Location:</strong></h5>
            <p>@Model.Location</p>
        </div>
        <div class="col-md-6">
            <h5><strong>Event Date:</strong></h5>
            <p>@Model.EventDate.ToShortDateString()</p>
            <h5><strong>Max Participants:</strong></h5>
            <p>@Model.MaxParticipants</p>
        </div>
    </div>

    <div class="text-center mb-4">
        <a href="@Model.LocationUrl" class="btn btn-primary" target="_blank">View Location on Google Maps</a>
    </div>

    <h3 class="mt-5 text-center">Attendees</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.DonorEvents != null && Model.DonorEvents.Any())
            {
                foreach (var donorEvent in Model.DonorEvents)
                {
                    var donor = donorEvent.Donor;
                    <tr>
                        <td><img src="@donor.Img" alt="@donor.FullName" class="rounded-circle" style="width: 50px; height: 50px;" /></td>
                        <td><strong>@donor.FullName</strong></td>
                        <td>@donor.Age years old, @donor.Gender</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No attendees yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .lead {
        font-size: 1.2rem;
        color: #6c757d; /* Bootstrap text-muted color */
    }
</style>

@model Chartypaltform.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<h1 class="text-center mb-4">Reset Password</h1>

<form asp-action="ResetPassword" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" readonly /> 
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label"></label>
        <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your new password" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Reset Password" class="btn btn-primary btn-block" />
    </div>
</form>

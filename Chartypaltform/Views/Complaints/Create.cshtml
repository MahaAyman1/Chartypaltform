@model Chartypaltform.Models.ViewModels.ComplaintViewModel

@{
    ViewData["Title"] = "Create";
    ViewBag.ShowHeroSection = true;

}

<h1>Create Complaint</h1>

<h4>Complaint</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ComplaintText" class="control-label"></label>
                <textarea asp-for="ComplaintText" class="form-control"></textarea>
                <span asp-validation-for="ComplaintText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <textarea asp-for="Subject" class="form-control"></textarea>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

                               
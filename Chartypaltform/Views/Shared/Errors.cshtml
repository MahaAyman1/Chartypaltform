@model string

@{
    ViewBag.Title = "Error";
    ViewBag.ShowHeroSection = true;
}

<div class="container mt-5">
    <div class="text-center">
        <div class="alert alert-danger" role="alert">
            <h2 class="mb-3">Oops! Something went wrong.</h2>
            <p class="lead">@Model</p>
        </div>
        <a asp-action="Event" asp-controller="Home" class="btn btn-primary btn-lg mt-3">Back to Events</a>
    </div>
</div>

<style>
    .alert {
        border-radius: 8px;
        font-size: 1.25rem;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.25rem;
    }
</style>

@model Chartypaltform.Models.ViewModels.ComplaintViewModel

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Contact Information</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3">
                <p><span>Address:</span> 198 West 21th Street, Suite 721 New York NY 10016</p>
            </div>
            <div class="col-md-3">
                <p><span>Phone:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
            </div>
            <div class="col-md-3">
                <p><span>Email:</span> <a href="mailto:info@yoursite.com">info@yoursite.com</a></p>
            </div>
            <div class="col-md-3">
                <p><span>Website</span> <a href="#">yoursite.com</a></p>
            </div>
        </div>
        <div class="row block-9">
            <div class="col-md-6 pr-md-5">
                <h4 class="mb-4">Do you have any complaints?</h4>
                <form asp-action="Create" method="post" asp-controller="Complaints">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <textarea asp-for="Subject" class="form-control"></textarea>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ComplaintText" class="control-label"></label>
                        <textarea asp-for="ComplaintText" class="form-control"></textarea>
                        <span asp-validation-for="ComplaintText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>

            <div class="col-md-6" >
                <img src="~/images/bg_1.jpg" />
            </div>
        </div>
    </div>
</section>

@model IEnumerable<SuccessCampaign>

@if (User.IsInRole("Organization"))
{
    <a class="btn btn-primary mt-4" asp-action="CreateSuccessStory" asp-controller="SuccessStory">
        Create Success Campaign
    </a>
}

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            @foreach (var success in Model)
            {
                if (success?.Campaign != null)
                {
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="blog-entry align-self-stretch">
                            <a asp-action="Details" asp-controller="SuccessStory" asp-route-id="@success.Id" class="block-20" style="background-image: url('@success.Campaign.CampaignImg');">
                            </a>
                            <div class="text p-4 d-block">
                                <div class="meta mb-3">
                                    
                                    <div>
                                        <a asp-action="Details" asp-controller="Organization" asp-route-id="@success.Campaign.UserId">@success.Campaign.User?.OrganizationName</a>
                                    </div>
                                </div>
                                <div>@success.DateCreated</div>
                                <h3 class="heading mt-3">
                                    <a asp-action="Details" asp-controller="SuccessStory" asp-route-id="@success.Id">@success.title</a>
                                </h3>
                                <p style="display: -webkit-box; -webkit-line-clamp: 5; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">
                                    @success.impact
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

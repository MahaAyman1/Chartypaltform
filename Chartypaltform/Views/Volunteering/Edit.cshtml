@model Chartypaltform.ViewModels.CreateVolunteeringViewModel

<h2>Edit Volunteering Opportunity</h2>
@{
    ViewData["Title"] = "Edit Volunteering Opportunity";
    ViewBag.ShowHeroSection = true;
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /> <!-- This line includes the Id in the form -->

    <div class="form-group">
        <label asp-for="AvailableFrom"></label>
        <input asp-for="AvailableFrom" class="form-control" type="datetime-local" required />
    </div>
    <div class="form-group">
        <label asp-for="AvailableTo"></label>
        <input asp-for="AvailableTo" class="form-control" type="datetime-local" required />
    </div>


    <div class="form-group">
        <label>Select Tasks:</label>
        <div>
            @foreach (var task in Enum.GetValues(typeof(VolunteeringTask)).Cast<VolunteeringTask>())
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="SelectedTasks"
                           value="@task"
                           id="task_@task"
                    @(Model.SelectedTasks.Contains(task) ? "checked" : "") />
                    <label class="form-check-label" for="task_@task">
                        @task
                    </label>
                </div>
            }
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Update</button>
</form>

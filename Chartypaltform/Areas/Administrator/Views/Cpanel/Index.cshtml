@model Chartypaltform.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="container-xl">

	<h1 class="app-page-title">Overview</h1>

	<div class="app-card alert alert-dismissible shadow-sm mb-4 border-left-decoration" role="alert">
		<div class="inner">
			<div class="app-card-body p-3 p-lg-4">
				<h3 class="mb-3">Welcome, @Model.AdminFullName!</h3>
				<div class="row gx-5 gy-3">
					<div class="col-12 col-lg-9">

						<div> Stay focused and attentive, for every detail you manage makes a difference in our success!</div>
					</div><

				</div>

			</div>
		</div>
	</div>

	<div class="row g-4 mb-4">
		<div class="col-6 col-lg-3">
			<div class="app-card app-card-stat shadow-sm h-100">
				<div class="app-card-body p-3 p-lg-4">
					<h4 class="stats-type mb-1">Registered Users</h4>
					<div class="stats-figure">@Model.RegisteredUserCount</div>
					<div class="stats-meta @(Model.WeeklyUserGrowthRate >= 0 ? "text-success" : "text-danger")">
						<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi @(Model.WeeklyUserGrowthRate >= 0 ? "bi-arrow-up" : "bi-arrow-down")" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="@(Model.WeeklyUserGrowthRate >= 0
                        ? "M8 15a.5.5 0 0 1-.5-.5V2.707L4.354 6.854a.5.5 0 1 1-.708-.708l4-4a.5.5 0 0 1 .708 0l4 4a.5.5 0 0 1-.708.708L8.5 2.707V14.5a.5.5 0 0 1-.5.5z"
                        : "M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z")" />
						</svg>
						@Model.WeeklyUserGrowthRate.ToString("0.##")%
					</div>
				</div>
			</div>
		</div>

		<div class="col-6 col-lg-3">
			<div class="app-card app-card-stat shadow-sm h-100">
				<div class="app-card-body p-3 p-lg-4">
					<h4 class="stats-type mb-1">Open Campaigns</h4>
					<div class="stats-figure">@Model.OpenCampaignsCount</div> 
					<div class="stats-meta">
						Open
					</div>
				</div>
				<a class="app-card-link-mask" asp-action="Index" asp-controller="Campaigns"></a>
			</div>
		</div>

		<div class="col-6 col-lg-3">
			<div class="app-card app-card-stat shadow-sm h-100">
				<div class="app-card-body p-3 p-lg-4">
					<h4 class="stats-type mb-1">Approved Organizations</h4>
					<div class="stats-figure">@Model.ApprovedOrganizationsCount</div> 
					<div class="stats-meta">
						Approved
					</div>
				</div>
				<a class="app-card-link-mask" asp-action="ShowPendingOrganizations" asp-controller="Organization"></a>
			</div>
		</div>

	</div>


</div>

